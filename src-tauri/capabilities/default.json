{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "shell:default",
    "fs:allow-app-meta",
    "fs:allow-app-meta-recursive",
    "fs:allow-app-read-recursive",
    "fs:allow-appconfig-read-recursive",
    "fs:allow-home-read",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write",
    "fs:allow-home-write-recursive",
    "fs:allow-copy-file",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-create",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "mkdir",
          "cmd": "mkdir",
          "args": true
        },
        {
          "name": "touch",
          "cmd": "touch",
          "args": true
        },
        {
          "name": "cp",
          "cmd": "cp",
          "args": true
        },
        {
          "name": "chmod",
          "cmd": "chmod",
          "args": true
        },
        {
          "name": "sed",
          "cmd": "sed",
          "args": true
        },
        {
          "name": "docker-compose",
          "cmd": "docker-compose",
          "args": true
        },
        {
          "name": "docker",
          "cmd": "docker",
          "args": true
        },
        {
          "name": "lsof",
          "cmd": "lsof",
          "args": true
        }
      ]
    }
  ]
}